= simple_form_for(@trouble, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification
  .form-inputs
    = f.association :client
    = f.association :user, label_method: :email
    = f.input :range
    = f.input :aasm_state
    = f.input :detail
    = f.input :occupancy, as: :string, input_html: { class: 'datepicker' }, wrapper_html: { class: 'datepicker-wrapper' }
    = f.input :occur_date, as: :string, input_html: { class: 'datetime-picker' }, wrapper_html: { class: 'datepicker-wrapper' }
  .form-actions
    = f.button :submit
