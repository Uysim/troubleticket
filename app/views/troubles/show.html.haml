%h2.text-center Detail About Trouble
.jumbotron
  %p#notice= notice
  %p
    %strong Client:
    = @trouble.client_name
  %p
    %strong User:
    = @trouble.user_email
  %p
    %strong Range:
    = @trouble.range
  %p
    %strong State:
    = @trouble.state
  %p
    %strong Detail:
    = @trouble.detail
  %p
    %strong Occupancy:
    = @trouble.occupancy
  %p
    %strong Occur Date:
    = @trouble.occur_date

= link_to troubles_path, class: 'btn btn-success' do
  %i.fa.fa-arrow-left
    %strong Back
|
= link_to '<i class="fa fa-edit" ></i> Edit'.html_safe, edit_trouble_path(@trouble), class: 'btn btn-primary' do
  %i.fa.fa-edit
    %strong Back
