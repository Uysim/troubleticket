%p#notice= notice
%h1 Clients
%table.table
  %thead
    %tr
      %th Name
      %th Id number
      %th Phone
      %th Email
      %th Address
      %th{:colspan => "3"}
  %tbody
    - @clients.each do |client|
      %tr
        %td= client.name
        %td= client.id_number
        %td= client.phone
        %td= client.email
        %td= client.address
        %td= link_to 'Show', client
        %td= link_to 'Edit', edit_client_path(client)
        %td= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Client', new_client_path
