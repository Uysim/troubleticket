= simple_form_for(@client, html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f|
  = f.error_notification
  .form-inputs
    = f.input :id_number
    = f.input :name
    = f.input :phone
    = f.input :email
    = f.input :address
  .form-actions
    .order
      = f.button :submit, class: "btn btn-primary"
