          %li
            = link_to 'Manage Users', users_path
          %li
            = link_to 'Clients', clients_path
          %li
            = link_to 'Toubles', troubles_path
          %li
            = link_to 'Sign Out', destroy_user_session_path, method: :delete
        - else
          %li
            = link_to 'Create Toubles', new_trouble_path
